[uwsgi]
master = true
processes = 2
die-on-term = true
logger = @uwsgiLogger@

site-root = @ttRss@
chdir = %(site-root)

static-check = %(site-root)
static-map = /feed-icons=/var/lib/tt-rss/feed-icons
static-skip-ext = .php
static-skip-ext = .inc
offload-threads = 2

plugins = 0:php
php-ini = @php@/lib/php.ini
php-docroot = %(site-root)
php-index = index.php
php-allowed-ext = .php
php-allowed-ext = .inc

php-set = date.timezone=CET
